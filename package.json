{
  "name": "qwik-speak",
  "description": "Internationalization (i18n) library to translate texts, dates and numbers in Qwik apps",
  "engines": {
    "node": ">=16.0.0"
  },
  "private": true,
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/cloudflare-pages/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "wrangler pages deploy ./dist",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "lint": "eslint \"src/**/*.ts*\"",
    "preview": "qwik build preview && vite preview --open",
    "qwik-speak-extract": "qwik-speak-extract --supportedLangs=en-US,it-IT,de-DE --assetsPath=i18n",
    "serve": "wrangler pages dev ./dist",
    "gpt-translate-json": "gpt-translate-json --apiKey=openai_api_key --model=gpt-4 --maxTokens=3000 --langs=en-US,it-IT,de-DE --originalLang=en-US",
    "start": "vite --open --mode ssr",
    "test": "vitest test --run",
    "test.e2e": "playwright test",
    "qwik": "qwik"
  },
  "devDependencies": {   
    "@builder.io/qwik": "1.2.18",
    "@builder.io/qwik-city": "1.2.18",
    "@playwright/test": "1.38.0",
    "@types/eslint": "8.44.6",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "eslint": "8.52.0",
    "eslint-plugin-qwik": "1.2.18",
    "qwik-speak": "^0.17.0",
    "gpt-translate-json": "^0.1.0",
    "typescript": "5.2.2",
    "undici": "5.27.0",
    "vite": "4.5.0",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "^0.34.6",
    "wrangler": "^3.17.1"
  },
  "type": "module"
}
