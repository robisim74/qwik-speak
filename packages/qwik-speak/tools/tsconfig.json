{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "es2021"
    ],
    "strict": true,
    "declaration": true,
    "declarationDir": "../dts-out/tools",
    "emitDeclarationOnly": true,
    "incremental": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": [
      "node",
      "vite/client",
      "vite",
      "rollup"
    ]
  },
  "exclude": ["tests/**", "vite.**.ts"]
}